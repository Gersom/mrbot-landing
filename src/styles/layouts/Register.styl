.register
  background: #333842
  border-bottom: 3px solid #00ACE6
  border-radius: 10px
  border-right: 3px solid #00ACE6
  border: none
  max-width: 860px
  margin: 0 20px
  padding: 40px 50px
  color: #fff
  box-sizing: border-box

  p, input
    font-size: 14px

  &__side
    margin-left: 40px
  &__side:nth-child(1)
    margin-left: 0
  &__content
    display: flex

  &__title
    font-size: 40px
    margin: 0 0 20px 0
    font-family: 'Righteous', cursive;
    font-weight: 400
  &__paragraph
    margin: 15px 0 0 0
  &__input
    margin-top: 15px
  &__submit
    margin-top: 40px

@media screen and (max-width: 700px)
  .register
    &__side
      margin-top: 40px
    &__side:nth-child(1)
      margin-top: 0
    &__content
      display: block
    &__title
      margin: 0 0 0 0
    &__submit
      margin-top: 20px