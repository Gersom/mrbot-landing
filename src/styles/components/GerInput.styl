.ger-input
  width: 100%
  input
    align-items: center
    background: #555F73
    border-radius: 7px
    border: none
    box-sizing: border-box
    color: #ff
    display: block
    display: flex
    height: 46px
    padding: 15px 17px
    width: 100%
  input:active,
  input:focus
    outline: 0
    border: none
    
  input:focus::placeholder
    color: #000
  input::placeholder
    color: rgba(255, 255, 255, 0.5)