.gerinput
  width: 100%
  position: relative
  display: flex
  align-items: center
  input
    font-family: 'Roboto', sans-serif;
    align-items: center
    background: #555F73
    border-radius: 7px
    border: none
    box-sizing: border-box
    color: #ff
    display: block
    display: flex
    height: 46px
    padding: 15px 17px
    width: 100%
  input:active,
  input:focus
    outline: 0
    border: none
    
  input:focus::placeholder
    color: #000
  input::placeholder
    font-style: italic
    color: rgba(255, 255, 255, 0.5)
  
  &__check,
  &__error
    display: none
    position: absolute
    right: 15px

.gerinput.is--verified
  .gerinput__check
    display: flex

.gerinput.is--error
  .gerinput__error
    display: flex