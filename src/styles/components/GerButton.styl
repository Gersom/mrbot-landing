.ger-button
  background: #00ACE6
  border: none
  border-bottom: 3px solid #80D6F3
  border-right: 3px solid #80D6F3
  border-radius: 10px
  height: 60px
  font-size: 18px
  padding: 0 20px
  width: 100%
  transition: 0.5s ease background
  cursor: pointer
  transition: 0.5s ease color
  &:hover
    color: #fff
  &:active
    border-left: 3px solid #80D6F3
    border-top: 3px solid #80D6F3
  
  &.is--small
    height: 46px