.ger-button
  background: #00ACE6
  border: none
  border-bottom: 3px solid #7FD5F2
  border-radius: 10px
  border-right: 3px solid #7FD5F2
  cursor: pointer
  font-family: 'Roboto', sans-serif
  font-size: 16px
  font-weight: 500
  height: 60px
  padding: 0 20px
  transition: 0.5s ease background
  transition: 0.5s ease color
  width: 100%
  &:hover
    color: #fff
  &:active
    border-left: 3px solid #80D6F3
    border-top: 3px solid #80D6F3
  
  &.is--small
    height: 46px