.cover-page
  height: 100%;
  color: #fff
  display: flex

  &__container
    position: relative
    display: flex;
    align-items: center;
  
  &__content
    padding-right: 270px

  &__title
    font-size: 40px
    margin: 0
    font-family: 'Righteous', cursive;
    font-weight: 400
  
  &__description
    font-size: 16px
    margin: 20px 0 0 0
  
  &__download
    margin: 30px 0 0 0
    display: flex
    align-items: center
    a
      display: block
      margin-right: 30px
    img
      height: 40px
      width: auto

  &__register
    margin: 30px 0 0 0
    width: 220px
  
  &__app
    position: absolute
    right: 0
    width: 250px
    height: auto
    img
      width: 100%
      height: auto