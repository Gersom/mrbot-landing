.header
  align-content: center
  background: rgba(40, 44, 52, 0.7)
  display: flex
  height: 80px
  &__container
    display: flex
    justify-content: space-between

.nav
  margin: 0
  padding: 0
  display: flex
  align-items: center
  justify-content: flex-end

  &__element
    list-style: none
    margin-left: 30px

  a
    text-decoration: none
    color: #fff
    position: relative
    padding: 10px 0
    width: 60px
    display: block
    text-align: right
    font-size: 14px
    &::before
      content: ""
      position: absolute
      bottom: 0
      right: 0
      height: 2px
      width: 60px
      background: #fff
